<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/home_top_toolbar"
        layout="@layout/activity_top_toolbar_main_home"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color_fragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/home_filter_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_toolbar_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@color/transparent">

                <RelativeLayout
                    android:id="@+id/home_filter_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/filter_image"
                        android:layout_width="@dimen/home_toolbar_filter_image_size"
                        android:layout_height="@dimen/home_toolbar_filter_image_size"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_filter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/filter_image"
                        android:text="Filter"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/home_toolbar_filter_text_size"
                        android:textStyle="bold"/>

                    <ToggleButton
                        android:id="@+id/home_filter_toggle"
                        android:layout_width="@dimen/home_toolbar_filter_toggle_width"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/filter_toggle_button"
                        android:clickable="true"
                        android:textColor="@color/colorPrimary"
                        android:textOff="OFF"
                        android:textOn="ON"
                        android:textSize="@dimen/home_toolbar_filter_toggle_text_size"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <ToggleButton
                    android:id="@+id/home_one_column_toggle"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_one_column_drawable"/>

                <ToggleButton
                    android:id="@+id/home_two_columns_toggle"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_one_column_drawable"
                    android:checked="true"/>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/home_filter_toolbar"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/home_filter_toolbar"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_tutorial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_overlay_90"
            android:clickable="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="@string/home_tutorial_btn_home"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="@string/home_tutorial_btn_add"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="@string/home_tutorial_btn_profile"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>

