<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="top"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"
        style="@style/homeTopDetailToolbar"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/toolbar_btn_back_navigation"
                style="@style/leftIconOfToolbar"
                android:layout_alignParentLeft="true"
                android:src="@drawable/btn_back"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find groups near you"
                android:textColor="@android:color/black"
                android:textSize="@dimen/toolbar_title_size"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                />

            <TextView
                style="@style/rightIconPaymentToolbar"
                android:id="@+id/toolbar_next_button"
                android:text="@string/button_next"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_width="@dimen/toolbar_btn_width"
                android:textColor="@color/btn_clamour_color"
                android:textSize="@dimen/toolbar_btn_text_size"
                android:textAllCaps="false"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:background="@android:color/transparent"
                android:layout_alignBottom="@id/toolbar_btn_back_navigation"
                android:layout_alignTop="@id/toolbar_btn_back_navigation"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>


        <!--<Button-->
        <!--android:id="@+id/toolbar_next_button"-->
        <!--style="@style/RightIconOfToolbar"-->
        <!--android:layout_width="@dimen/large_size_right_icon"-->
        <!--android:background="@drawable/background_next_button"-->
        <!--android:text="@string/button_next"/>-->

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/standard_border"
            android:background="@drawable/toolbar_shadow_effect"/>

    </FrameLayout>
</LinearLayout>