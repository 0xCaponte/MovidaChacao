<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    android:id="@+id/home_top_detail_toolbar"
    style="@style/homeTopDetailToolbar"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_top_toolabar_back_button"
            style="@style/leftIconOfToolbar"
            android:src="@drawable/btn_back"
            android:clickable="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/detail_top_title_text_view"
            style="@style/centerIconOfToolbar"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/item_description_test"/>


    </RelativeLayout>


</android.support.v7.widget.Toolbar>