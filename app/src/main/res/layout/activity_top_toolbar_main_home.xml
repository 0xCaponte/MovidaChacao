<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    android:id="@+id/home_top_toolbar"
    android:visibility="visible"
    style="@style/homeTOPToolbar"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/toolbar_search_button"
            style="@style/homeTOP1ToolbarButtons"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_search2x"/>

        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="3dp"
            android:background="@color/Spinner">

            <Spinner
                android:id="@+id/toolbar_group_spinner"
                style="@style/homeTOP1ToolbarSpinner"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:entries="@array/group_arrays"
                android:spinnerMode="dropdown"
                android:prompt="@string/group_prompt"/>

            <ImageView
                android:id="@+id/toolbar_group_spinner_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="20dp"
                android:src="@drawable/btn_arrow_down_turquoise"/>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/toolbar_notification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_notification_on2x"
            android:clickable="true">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.Toolbar>
