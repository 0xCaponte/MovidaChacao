<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_material_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/left_grid_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/introduction_grids_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:columnWidth="@dimen/introduction_grid_column_width"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="1"
            android:stretchMode="spacingWidthUniform"
            android:verticalSpacing="10dp" />

        <GridView
            android:id="@+id/right_grid_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/introduction_grids_height"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:columnWidth="@dimen/introduction_grid_column_width"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="1"
            android:stretchMode="spacingWidthUniform"
            android:verticalSpacing="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/introduction_layout_height"
        android:background="@color/transparent"
        android:clickable="true"
        android:id="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:elevation="30dp"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout">

        <RelativeLayout
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/introduction_logo_margin_top">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_clamour" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/app_icon"
                android:text="@string/app_title"
                android:textColor="@color/app_title"
                android:textSize="@dimen/clamour_title_size"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:gravity="center|center_horizontal"
            android:text="@string/app_description"
            android:textColor="@color/app_description"
            android:textSize="@dimen/clamour_description_size" />

         <Button
            android:id="@+id/btn_sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/introduction_sign_up_height"
            android:layout_marginLeft="@dimen/introduction_sign_up_margin"
            android:layout_marginRight="@dimen/introduction_sign_up_margin"
            android:layout_marginTop="@dimen/introduction_sign_up_margin_top"
            android:background="@drawable/btn_sign_up_background"
            android:text="@string/btn_sign_email"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/introduction_sign_up_text"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/singup_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
